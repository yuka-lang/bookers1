<h1 class="heading"> Editing Book
</h1>

<div class="form">
 <%= form_with model:@book, local:true do |f| %>
  <p>Title</p>
  <%= f.text_field :title %>
  <p>Body</p>
  <%= f.text_area :body %>



 <% if @book.errors.any? %>
  <%= @book.errors.count %> errors prohibited this book from being saved:
  <% @book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
  <% end %>


   <p><%= f.submit 'Update Book' %></p>

 </div>

   <div class="choose">
    <%= link_to "Show", book_path(@book) %>
     <span>|</span>
    <%= link_to "Back", books_path(@book) %>
   </div>
   <% end %>