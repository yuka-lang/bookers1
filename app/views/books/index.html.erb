 <main> 
  
  <h1>Books</h1>

 <table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
    </tr>
  </thead>
  <tbody>
    
      <% @books.each do |book| %>
      <tr>
      <td class="contents"><%= book.title %></td>
      <td class="contents"><%= book.body %></td>
      <td class="choices"><%= link_to "Show", book_path(book.id) %></td>
      <td class="choices"><%= link_to "Edit",  edit_book_path(book.id) %></td>
      <td><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
      </tr>
      <% end %>
    
  </tbody>

 </table>


<h2>New book</h2>


<% if @book.errors.any? %>
  <p><%= @book.errors.count %> errors prohibited this book from being saved:</p>
  <ul>
  <% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
  <% end %>
  </ul>
<% end %>
 

  <%= form_with model:@book, url:'/books', local:true do |f| %>
     <p>Title</p>
     <%= f.text_field :title %>
     <p>Body</p>
    <%= f.text_area :body %>
    <p class="item"><%= f.submit 'Creste Book' %></p>
  <% end %>

</main>